<h1><%= t('forms.task_detail.page_title') %></h1>

<body>
  <p>
    <strong><%= t('forms.task_detail.title_label') %>:</strong>
    <%= @task.title %>
  </p>

  <p>
    <strong><%= t('forms.task_detail.content_label') %>:</strong>
    <%= @task.content %>
  </p>

  <p>
    <strong><%= t('forms.task_detail.created_at_label') %>:</strong>
    <%= @task.created_at %>
  </p>

  <p>
    <strong><%= t('forms.new_task.deadline_label') %>:</strong>
    <%= @task.deadline_on %>
  </p>

  <p>
    <strong><%= t('forms.new_task.priority_label') %>:</strong>
    <%= @task.display_priority%>
  </p>

  <p>
    <strong><%= t('forms.new_task.status_label') %>:</strong>
    <%= @task.display_status %>
  </p>

  <p>
    <strong>ラベル:</strong>
    <% @task.labels.each do |label| %>
      <span><%= label.name %></span>
    <% end %>
  </p>

  <p>
    <%= link_to t('forms.task_detail.edit_link'), edit_task_path(@task), id: 'edit-task' %> |
    <%= link_to t('forms.task_detail.back_link'), tasks_path, id: 'back' %>
  </p>
</body>



