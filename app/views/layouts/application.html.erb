<!DOCTYPE html>
<html>
<head>
  <title>CdpWebManyoTask</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
          <% if current_user&.admin? %>
            <li class="nav-item"><%= link_to "ユーザ一覧", admin_users_path, id: 'users-index', class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "ユーザを登録する", new_admin_user_path, id: 'add-user', class: 'nav-link' %></li>
          <% end %>
          <li class="nav-item"><%= link_to t('links.global.tasks_index'), root_path, id: 'tasks-index', class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('links.global.new_task'), new_task_path, id: 'new-task', class: 'nav-link' %></li>
          <!-- ラベル一覧画面へのリンク -->
          <li class="nav-item"><%= link_to 'ラベル一覧', labels_path, id: 'labels-index', class: 'nav-link' %></li>
          <!-- ラベル登録画面へのリンク -->
          <li class="nav-item"><%= link_to 'ラベルを登録する', new_label_path, id: 'new-label', class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('links.global.account_setting'), user_path(current_user), id: 'account-setting', class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('links.global.logout'), session_path(current_user), method: :delete, id: 'sign-out', class: 'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to t('links.global.sign_up'), new_user_path, id: 'sign-up', class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('links.global.sign_in'), new_session_path, id: 'sign-in', class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class='container'>
    <p id="notice" class="alert alert-info"><%= notice %></p>
    <%= yield %>
  </div>
</body>
</html>
